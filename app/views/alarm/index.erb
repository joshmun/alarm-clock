<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-12">
      <%= image_tag("alarm-logo.png", id: "logo") %>
    </div>
  </div>
  <div class="row justify-content-md-center">
    <div>
      <h1>CURRENT TIME</h1>
    </div>
  </div>
  <div class="row justify-content-md-center">
    <div class="clock">
      <span class="current-time"></span>
    </div>
  </div>
  <div class="row justify-content-md-center">
    <h1>ALARM TIME</h1>
  </div>
  <div class="row justify-content-md-center">
    <div class="clock">
      <span class="alarm-time">00 : 00 : 00</span>
    </div>  
  </div>

  <!-- Phone Number & Twilio API -->
  <div class="row justify-content-md-center">
    <h1>SET</h1>
  </div>
  <div class="row justify-content-md-center">
    <div class="clock">
      <span class="alarm-time"></span>
    </div>  
  </div>
</div>